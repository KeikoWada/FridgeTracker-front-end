
<ul>
{{#each lists as |expiration_date|}}


 <!-- Developers, why are we using data-id and not just id? -->
 <div>
    {{#if expiration_date.date}}
      <ul class="list-unstyled">
      <li class="list-group-date" data-id="{{expiration_date.date}}">Expiration Date: {{expiration_date.date}} </li>
      <li class="list-group-item"> ID : {{expiration_date.id}} </li>
      <li class="list-group-item"> Item : {{expiration_date.item_name}} </li>
      <li class="list-group-item">  Category: {{expiration_date.category}} </li>
      <!-- <button id="edit" class="btn btn-default">Edit item</button>
      <button id="remove" class="btn btn-default" data-id="{{expiration_date.id}}">delete this list</button> -->
      <button class="list-delete" data-id={{expiration_date.id}}>
        Remove
      </button>
      <!-- <button class="list-update" data-id={{expiration_date.id}}>
        update
      </button> -->
      <button type="submit" data-id={{expiration_date.id}} class="list-update" class="btn btn-primary btn-lg" data-backdrop="static" data-keyboard="false" data-toggle="modal" data-target="#thisupdatemyModal">
      Update List
    </button>
</div>
    {{else}}
  <div>
    <ul>
      <li class="list-group-date" data-id="{{expiration_date.id}}">Expiration Date: N/A </li>
      <li class="list-group-item"> ID : {{expiration_date.id}} </li>
      <li class="list-group-item"> Item : {{expiration_date.item_name}} </li>
      <li class="list-group-item">  Category: {{expiration_date.category}} </li>
      <button class="list-delete" data-id={{expiration_date.id}}>
        Remove
      </button>
      <button type="submit" data-id={{expiration_date.id}} class="list-update" class="btn btn-primary btn-lg" data-backdrop="static" data-keyboard="false" data-toggle="modal" data-target="#thisupdatemyModal">
      Update List
    </button>
    {{/if}}
  </div>
</li>
{{/each}}
</ul>





<div class="modal fade" id="thisupdatemyModal" tabindex="-1" role="dialog" aria-labelledby="gridSystemModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="gridSystemModalLabel">Update a List</h4>
      </div>
      <div class="modal-body">
        <!-- content within a model of create list -->
        <form id="updateHtml">
          <div class="form-group">
            <label for="list_id">List ID</label>
            <input type="number" class="form-control" id="list_id" name="list[id]" placeholder="ID" required>
          </div>
          <div class="form-group">
            <label for="expiration date">Expiration Date</label>
            <input type="date" class="form-control" id="expiration" name=expiration_date[date] placeholder="YYYY-MM-DD" required>
          </div>
          <div class="form-group">
            <label for="item">Item</label>
            <input type="text" class="form-control" id="item_name" name="expiration_date[category]" placeholder="Item Name" required>
          </div>
          <div class="form-group">
            <label for="category">Category</label>
            <input type="text" class="form-control" id="category_name" name="expiration_date[category]" placeholder="Category" required>
            <!-- content within a model of create list end -->
            <div class="modal-footer">
              <button type="button" class="btn btn-default cancel" data-dismiss="modal">Cancel</button>
              <button type="submit" class="toupdate" class="btn btn-default">Update list</button>
            </div>
          </div>
          <!-- /.modal-content -->
        </form>
      </div>
      <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->
  </div>
</div>
